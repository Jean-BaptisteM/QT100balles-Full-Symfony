			{% endfor %}
		</div> #}

		<div class="row justify-content-center my-3"> 
			<div class="col-6 carousel"id="carousel-1" auto-scroll="7000">
				{% for item in items %}
					<div class="carousel__item text-center">
						<a href="{{ path('item_show', {id:item.id}) }}" class="card-purple">
							{% if item.image != null %}
								<img src="{{ asset('assets/images/items/' ~ item.image) }}" class="card-img-top rounded carousel-img-limit" alt="derniers articles">
							{% else %}
								<img src="{{ asset('assets/images/mire_error.jpg') }}" class="card-img-top rounded carousel-img-limit" alt="derniers articles">
							{% endif %}
						</a>
					</div>
				{% endfor %}
			</div>
		</div>

	<!-- catégories items -->
	<div
		class="row d-flex justify-content-around pt-5 pb-4">
		<!-- bonbons -->
		<div class="card bloc-detail col-7 col-xl-3 mb-5">
			<a href="{{ path('item_liste', {id:1})}}">
				<div class="card-header bloc-contour-detail card-header-accueil mt-2">bonbons</div>
			</a>
			<div class="card-body">
				{% for candy in candies %}
					<div class="row my-4 accueil-items p-3">
						<div class="col-3">
							<a href="{{ path('item_show', {id:candy.id}) }}">
								{% if candy.image != null %}
									<img src="{{ asset('assets/images/items/' ~ candy.image) }}" class="card-img-top rounded" alt="derniers articles">
								{% else %}
									<img src="{{ asset('assets/images/mire_error.jpg') }}" class="card-img-top rounded" alt="derniers articles">
								{% endif %}
							</a>
						</div>
						<div class="col-9">
							<h5 class="text-light">
								<a href="{{ path('item_show', {id:candy.id}) }}">{{ candy.name }}</a>
							</h5>
							<form action="{{ path('year_filter') }}" class="ruban col-2">
								<input name="filterYear" type="hidden" value="{{ candy.year }}">
								<button type="submit" class="year-tag float-right m-2">{{ candy.year }}</button>
							</form>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
		<!-- objets -->
		<div class="card bloc-detail col-7 col-xl-3 mb-5">
			<a href="{{ path('item_liste', {id:2})}}">
				<div class="card-header bloc-contour-detail card-header-accueil mt-2">Objets</div>
			</a>
			<div class="card-body">
				{% for object in objects %}
					<div class="row my-4 accueil-items p-3">
						<div class="col-3">
							<a href="{{ path('item_show', {id:object.id}) }}">
								{% if object.image != null %}
									<img src="{{ asset('assets/images/items/' ~ object.image) }}" class="card-img-top rounded" alt="derniers articles">
								{% else %}
									<img src="{{ asset('assets/images/mire_error.jpg') }}" class="card-img-top rounded" alt="derniers articles">
								{% endif %}
							</a>
						</div>
						<div class="col-9">
							<h5 class="text-light">
								<a href="{{ path('item_show', {id:object.id}) }}">{{ object.name }}</a>
							</h5>
							<form action="{{ path('year_filter') }}" class="ruban col-2">
								<input name="filterYear" type="hidden" value="{{ object.year }}">
								<button type="submit" class="year-tag float-right m-2">{{ object.year }}</button>
							</form>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
		<!-- jouets -->
		<div class="card bloc-detail col-7 col-xl-3 mb-5">
			<a href="{{ path('item_liste', {id:3})}}">
				<div class="card-header bloc-contour-detail card-header-accueil mt-2">jouets</div>
			</a>
			<div class="card-body">
				{% for toy in toys %}
					<div class="row my-4 accueil-items p-3">
						<div class="col-3">
							<a href="{{ path('item_show', {id:toy.id}) }}">
								{% if toy.image != null %}
									<img src="{{ asset('assets/images/items/' ~ toy.image) }}" class="card-img-top rounded" alt="derniers articles">
								{% else %}
									<img src="{{ asset('assets/images/mire_error.jpg') }}" class="card-img-top rounded" alt="derniers articles">
								{% endif %}
							</a>
						</div>
						<div class="col-9">
							<h5 class="text-light">
								<a href="{{ path('item_show', {id:toy.id}) }}">{{ toy.name }}</a>
							</h5>
							<form action="{{ path('year_filter') }}" class="ruban col-2">
								<input name="filterYear" type="hidden" value="{{ toy.year }}">
								<button type="submit" class="year-tag float-right m-2">{{ toy.year }}</button>
							</form>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>

	</div>
{% endblock %}
