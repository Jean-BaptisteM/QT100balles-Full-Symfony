{% extends 'front/base.html.twig' %}

{% block title %}QT100balles
{% endblock %}

{% block body %}
	<!-- Catégories media et bannière -->
	<div class="row align-items-center justify-content-around m-3 pt-4">
		<div class="col-5 col-lg-3 mb-5">
			<div class="container-accueil">
				<a href="{{ path('media_liste', {id:1})}}"><img src="{{ asset('assets/images/categories/categorie-films.png') }}" class="card-img-top card-purple rounded mb-3 card-movie" alt="films"/></a>
				<a href="{{ path('media_liste', {id:2})}}"><img src="{{ asset('assets/images/categories/categorie-series-tv.png') }}" class="card-img-top card-purple rounded card-serie" alt="series tv"/></a>
			</div>
		</div>
		<div class="col-10 order-first col-lg-5 order-lg-0 mb-5">
			<div class="container-accueil">
				<a href="{{ path('home') }}"><img src="{{ asset('assets/images/banniere.png') }}" class="card-img-top img-banniere card-purple rounded card-banner" alt="bannière"/></a>
			</div>
		</div>
		<div class="col-5 col-lg-3 mb-5">
			<div class="container-accueil">
				<a href="{{ path('media_liste', {id:3})}}"><img src="{{ asset('assets/images/categories/categorie-dessins-animes.png') }}" class="card-img-top mb-3 card-purple rounded card-cartoon" alt="dessins animés"/></a>
				<a href="{{ path('media_liste', {id:4})}}"><img src="{{ asset('assets/images/categories/categorie-emissions.png') }}" class="card-img-top card-purple rounded card-tvShow" alt="emissions"/></a>
			</div>
		</div>
	</div>

	<!-- quizz -->
	{# <div class="d-grid gap-2">
							  <button class="btn btn-lg btn-primary m-5 mt-5 pt-4 pb-4" type="button">QUIZ</button>
							</div> #}

	<!-- carousel -->
	{# <div class="row align-items-center justify-content-around m-5 mt-5 mb-5">
