<form method="post" action="{{ path('admin_person_delete', {'id': person.id}) }}" onsubmit="return confirm('Etes-vous certain de vouloir supprimer cette personne?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ person.id) }}">
    <button class="btn btn-purple my-2 col-4">Supprimer</button>
</form>
